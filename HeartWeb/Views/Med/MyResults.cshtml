@using HeartWeb.Controllers
@using X.PagedList
@model IPagedList<Tuple<int, DateTime>>
@{
    ViewData["Title"] = "Мои результаты";
    int counter = (Model.PageNumber - 1) * MedController.pageCapacity;
}

<partial name="_IconsPartial">
<partial name="_PagerPartial">
    <div class="table-responsive">
        <table class="table table-hover text-center mb-0">
            <thead>
                <tr>
                    <td>№ п/п</td>
                    <td>Время отправки</td>
                    <td>Редактирование</td>
                    <td>Просмотр</td>
                </tr>
            </thead>
            <tbody>
                @foreach (Tuple<int, DateTime> result in Model)
                {
                    counter++;
                    <tr>
                        <td>@counter</td>
                        <td>@result.Item2.ToString("dd.MM.yyyy HH:mm")</td>
                        <td><a class="btn btn-warning" asp-controller="Med" asp-action="Edit" asp-route-id="@result.Item1"><i class="bi bi-pencil-fill"></i></a></td>
                        <td><a class="btn btn-info" asp-controller="Med" asp-action="Result" asp-route-id="@result.Item1"><i class="bi bi-eye-fill"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
<partial name="_PagerPartial">
