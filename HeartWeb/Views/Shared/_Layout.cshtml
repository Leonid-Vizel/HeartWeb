<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HeartWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HeartWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @if (ViewData["login"] != null)
                {
                    <a class="navbar-brand" asp-controller="Med" asp-action="Index">HeartWeb</a>
                }
                else
                {
                    <a class="navbar-brand" asp-controller="Auth" asp-action="Login">HeartWeb</a>
                }
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (ViewData["login"] != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Med" asp-action="Form">Диагностика</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Med" asp-action="Literature">Литература</a>
                            </li>
                            @if (ViewData["admin"] != null && ViewData["admin"].Equals("true"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link active" asp-controller="Med" asp-action="Results">Результаты</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link active" asp-controller="Auth" asp-action="Registration">Регистрация</a>
                                </li>
                            }
                        }
                    </ul>
                    @if (ViewData["login"] != null)
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Auth" asp-action="Logout">[@ViewData["login"]] Выход</a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="d-flex h-100">
                <div class="d-flex mini-rect bg-danger"></div>
                <div class="d-flex bg-dark text-white full-rect w-100">@ViewData["Title"]</div>
            </div>
            <hr>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - HeartWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
